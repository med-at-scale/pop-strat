MAINCLASS=$1
echo $@
shift
echo $@

# Figure out where ADAM is installed
ADAM_REPO="$(cd `dirname $0`/..; pwd)"

CLASSPATH=$("$ADAM_HOME"/bin/compute-adam-classpath.sh)
ADAM_JARS=$("$ADAM_HOME"/bin/compute-adam-jars.sh)

ADAM_CLI_JAR="$ADAM_REPO"/target/scala-2.10/kmeans-pop_2.10-0.1-SNAPSHOT.jar

if [ -z "$SPARK_HOME" ]; then
  echo "Attempting to use 'spark-submit' on default path; you might need to set SPARK_HOME"
  SPARK_SUBMIT=spark-submit
else
  SPARK_SUBMIT="$SPARK_HOME"/bin/spark-submit
fi

# submit the job to Spark
#echo "$SPARK_SUBMIT" \
#  --class $MAINCLASS \
#  --properties-file "$ADAM_REPO"/bin/adam-spark-defaults.conf \
#  --jars "$ADAM_JARS" \
#  "$ADAM_CLI_JAR" \
#"$@"

"$SPARK_SUBMIT" \
  --class $MAINCLASS \
  --properties-file "$ADAM_REPO"/bin/adam-spark-defaults.conf \
  --jars "$ADAM_JARS" \
  "$ADAM_CLI_JAR" \
  "$@"
